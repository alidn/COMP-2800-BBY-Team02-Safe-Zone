<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
     
        .tooltiptext {
        visibility: hidden;
        background-color: black;
        color: #fff;
        position: absolute;
        z-index: 1;
      }
      
      #hover:hover .tooltiptext {
        visibility: visible;
      }
      body{
        background-color: darkcyan;
      }
      </style>
</head>
<body>
    <table class="table">
        <thead>
          <tr class=table-secondary>
            <th>Ranking</th>
            <th>Name</th>
            <th>Highest Score</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
        <% for(let i = 0;i < userArray.length; i++){%>
          <tr <%= i%2 ? `class=table-dark` : `class=table-light` %> >
            <th scope="row"><%= i+1 %></th>
            <td id="hover"><i><%= userArray[i].username %> <span class="tooltiptext"><%= userArray[i].email %></i></span></td> 
            <td><%= userArray[i].scores[0].score %></td>
            <td><%= userArray[i].scores[0].dateAchieved %></td>
          </tr>
        <% } %>
          
        </tbody>
      </table>
      
</body>
</html>