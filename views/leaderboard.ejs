<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="apple-touch-icon" sizes="180x180" href="../images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="../images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="../images/favicon-16x16.png">
  <link rel="icon" href="../images/favicon.ico" />
  <style>
    .tooltiptext {
      visibility: hidden;
      background-color: #53C6A2;
      color: black;
      position: absolute;
      z-index: 1;
      border-radius: 25px;
      width: 20%;
      text-align: center;
      border: black solid 1px;
    }

    #hover:hover .tooltiptext {
      visibility: visible;
    }

    body {
      background: rgb(83, 198, 162);
      background: linear-gradient(90deg, rgba(83, 198, 162, 1) 0%, rgba(34, 140, 148, 1) 89%);
    }

    b {
      font-weight: bold;
      font-style: normal;
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a href="#" class="navbar-brand">
      <img src="nav.png" height="28" alt="Logo">
    </a>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
      <div class="navbar-nav">
        <a href="main.html" class="nav-item nav-link active">Home</a>
        <a href="" class="nav-item nav-link">My Account</a>
      </div>
      <div class="navbar-nav ml-auto">
        <a href="#" class="nav-item nav-link">Login</a>
      </div>
    </div>
  </nav>
  <br>
  <br>

  <!-- Leaderboard Table -->
  <table class="table">
    <thead>
      <tr class=table-secondary>
        <th>Ranking</th>
        <th>Name</th>
        <th>Highest Score</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0;i < userArray.length; i++){%>
      <tr <%= i%2 ? `class=table-dark` : `class=table-light` %>>
        <th scope="row"><%= i+1 %></th>
        <td id="hover"><i><%= userArray[i].username %> <span
              class="tooltiptext"><%= userArray[i].email  %><br><b><%= userArray[i].friendsList %></b></i></span></td>
              <% if(userArray[i].scores[0] !== undefined){ %>
        <td><%= userArray[i].scores[0].score %></td>
        <td><%= userArray[i].scores[0].dateAchieved %></td>
      </tr>
      <% }else{ %>
        <td></td>
        <td></td>
        <% }} %>
    </tbody>
  </table>

</body>

</html>

